@model KinderhuisStageOpdracht.Models.Viewmodels.GebruikerViewModel.CreateClientViewModel

@{
    ViewBag.Title = "View";
}

@using (Html.BeginForm("CreateClient", "Gebruiker", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2>Maak een nieuwe cliënt aan</h2>
    <hr />
    <table class="inputformtable">
        <tr>
            <td>
                @Html.LabelFor(m => m.Voornaam)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Voornaam, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Voornaam, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(m => m.Naam)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Naam, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Naam, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(m => m.Opvangtehuizen)
            </td>
            <td>
                @Html.DropDownListFor(m => m.GeselecteerdOpvangtehuisId, new SelectList(Model.Opvangtehuizen), new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(m => m.GebruikersNaam)
            </td>
            <td>
                @Html.TextBoxFor(m => m.GebruikersNaam, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GebruikersNaam, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(m => m.Wachtwoord)
            </td>
            <td>
                @Html.PasswordFor(m => m.Wachtwoord, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Wachtwoord, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(m => m.BevestigWachtwoord)
            </td>
            <td>
                @Html.PasswordFor(m => m.BevestigWachtwoord, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BevestigWachtwoord, "", new { @class = "text-danger" })
            </td>
        </tr>
    </table>



    <table class="buttontable">
        <tr>
            <td>
                @if (Model.GebruikerType.Contains("Admin"))
                {
                <td>
                    <span class="terugButton">
                        <input type="submit" class="button" value="Voeg cliënt toe" />
                    </span>
                </td>

                    <td>
                        <span class="terugButton">
                            @Html.ActionLink("Terug", "AdminIndex", "Gebruiker")
                        </span>
                    </td>
                }
                else if (Model.GebruikerType.Contains("Opvoeder"))
                {
                    <td>
                        <input type="image" src="@Url.Content("~/Content/Images/Aanduidingen/accept.png")" />
                    </td>
                    <td>
                        <span class="imagebutton">
                            <a href="@Url.Action("OpvoederIndex", "Gebruiker")">
                                <img src="@Url.Content("~/Content/Images/Aanduidingen/terug.png")" alt="Terug" title="Terug" />
                            </a>
                        </span>
                    </td>
                }

            </tr>
        </table>
}

