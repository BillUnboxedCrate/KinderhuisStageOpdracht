@model KinderhuisStageOpdracht.Models.Viewmodels.GebruikerViewModel.OpvoederEnClientListViewModel

@{
    ViewBag.Title = "AdminIndex";

}

<h2>Administrator index</h2>
<h3>Leefgroep</h3>
@Html.ActionLink("Voeg een leefgroep toe", "CreateLeefgroep")
<table class="table">
    <tr>
        <th>Naam</th>
        <th>Adres</th>
        <th>Acties</th>

    </tr>
    @foreach (var o in Model.Llvm.List)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => o.Naam)</td>
            <td>@Html.DisplayFor(modelItem => o.Adres)</td>

            <td>
                @Html.ActionLink("Aanpassen", "Edit", new { id = o.Id })
                <span> | </span>
                @Html.ActionLink("Verwijderen", "Delete", new { id = o.Id })
            </td>
        </tr>
    }
</table>


