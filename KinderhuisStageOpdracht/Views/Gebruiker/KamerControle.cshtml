@model KinderhuisStageOpdracht.Models.Viewmodels.GebruikerViewModel.ListKamerControleItemsViewmodel
@{
    ViewBag.Title = "KamerControle";
}

<h2>KamerControle</h2>
@if (Model.KamerControleItems.Count == 0)
{
    <div class="nogNietAanwezig">
        @Html.Label("De opvoeder moet je kamer nog controleren")
    </div>
}
else
{
    <table id="kamercontroleTable">
        <tr>
            <th>Taak</th>
            <th>Kleine beschrijving</th>
            <th>Is dit gebeurd</th>
            <th>Uitleg</th>
        </tr>

        @for (int i = 0; i < Model.KamerControleItems.Count(); i++)
        {
            <tr>
                <td>
                    <div id="kamercontroleTitel">@Html.DisplayFor(modelItem => Model.KamerControleItems[i].Titel)</div>
                    @Html.HiddenFor(modelItem => Model.KamerControleItems[i].Titel)
                    <img src="@Url.Content(@Model.KamerControleItems[i].ImageUrl)" class="kamerControleImage" />
                </td>
                <td>@Html.DisplayFor(modelItem => Model.KamerControleItems[i].Beschrijving)</td>
                <td>
                    @*@(o.InOrde ? Html.Label("Ja") : Html.Label("Nee"))*@
                    @if (@Model.KamerControleItems[i].DoneOpvoeder)
                    {
                        <img src="@Url.Content("~/Content/Images/Aanduidingen/vinkje.png")" alt="Ja" class="aanduidingsImage" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Content/Images/Aanduidingen/cross.png")" alt="Nee" class="aanduidingsImage" />
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => Model.KamerControleItems[i].Uitleg)</td>
            </tr>
        }
    </table>
}
<div class="terugButton">
    @Html.ActionLink("Terug naar index", "ClientIndex", "Gebruiker")
</div>