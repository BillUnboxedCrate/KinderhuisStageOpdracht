@model KinderhuisStageOpdracht.Models.Viewmodels.GebruikerViewModel.ListKamerControleItemsViewmodel
@{
    ViewBag.Title = "KamerControle";
}
@using (Html.BeginForm("KamerControleOpvoeder", "Gebruiker", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h2>KamerControle</h2>
    <table id="kamercontroleTableOpvoeder">
        <tr>
            <th>Taak</th>
            <th>Kleine beschrijving</th>
            <th>Is dit werkelijk gebeurt</th>
            <td>Uitleg</td>
        </tr>
       
        @for (int i = 0; i < Model.KamerControleItems.Count(); i++)
        {
            <tr>
                <td>
                    <div id="kamercontroleTitel">@Html.DisplayFor(modelItem => Model.KamerControleItems[i].Titel)</div>
                    @Html.HiddenFor(modelItem => Model.KamerControleItems[i].Titel)
                </td>

                <td>@Html.DisplayFor(modelItem => Model.KamerControleItems[i].Beschrijving)</td>

                <td>@Html.EditorFor(modelItem => Model.KamerControleItems[i].DoneOpvoeder)</td>

                <td>
                    @Html.TextAreaFor(modelItem => Model.KamerControleItems[i].Uitleg)
                </td>
            </tr>
        }
    </table>
    <br/>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Opslaan" />
        </div>
    </div>
}
@Html.ActionLink("Terug naar index", "OpvoederIndex", "Gebruiker")