@model KinderhuisStageOpdracht.Models.Viewmodels.GebruikerViewModel.ListKamerControleItemsViewmodel
@{
    ViewBag.Title = "KamerControle";
}
@using (Html.BeginForm("KamerControleOpvoeder", "Gebruiker", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h2>KamerControle</h2>
    @Html.HiddenFor(model => model.KamerControleListIndexViewModel.ClientId)
    <table id="kamercontroleTableOpvoeder">
        <tr>
            <th>Taak</th>
            <th>Is dit werkelijk gebeurt</th>
            <td>Uitleg</td>
        </tr>

        @for (int i = 0; i < Model.KamerControleItems.Count(); i++)
        {
            <tr>
                <td>
                    <div id="kamercontroleTitel">@Html.DisplayFor(modelItem => Model.KamerControleItems[i].Titel)</div>
                    @Html.HiddenFor(modelItem => Model.KamerControleItems[i].Titel)
                </td>

                <td>@Html.CheckBoxFor(modelItem => Model.KamerControleItems[i].DoneOpvoeder, new{@class = "bigcheckbox"})</td>

                <td>
                    @Html.TextAreaFor(modelItem => Model.KamerControleItems[i].Uitleg)
                </td>
            </tr>
        }
    </table>
    <br />
    <table class="buttontable">
        <tr>
            <td><input type="submit" class="button" value="Opslaan" /></td>
            <td>
                <span class="terugButton">
                    @Html.ActionLink("Terug naar index", "OpvoederIndex", "Gebruiker")
                </span>
            </td>
        </tr>
    </table>




    <table class="table">
        <tr>
            <th>Datum</th>
            <th>Alles In orde</th>
        </tr>

        @foreach (var o in Model.KamerControleListIndexViewModel.List)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => o.Datum)</td>
                <td>
                    @*@(o.InOrde ? Html.Label("Ja") : Html.Label("Nee"))*@
                    @if (o.InOrde)
                    {
                        <img src="@Url.Content("~/Content/Images/Aanduidingen/vinkje.png")" alt="Ja" class="aanduidingsImage" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Content/Images/Aanduidingen/cross.png")" alt="Nee" class="aanduidingsImage" />
                    }
                </td>
            </tr>
        }
    </table>
}

