@model KinderhuisStageOpdracht.Models.Viewmodels.GebruikerViewModel.SanctieViewModel
@{
    ViewBag.Title = "CreateSanctie";
}

@using (Html.BeginForm("CreateSanctie", "Gebruiker", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <h2>Maak een sanctie aan</h2>
    <hr />
    <table class="form">
        <tr>
            <th>
                @Html.LabelFor(m => m.Client, new { @class = "control-label" })
            </th>
            <td>
                @Html.DisplayFor(m => m.Client, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <th>
                @Html.LabelFor(m => m.Straffen, new { @class = "control-label" })
            </th>
            <td>
                @Html.DropDownListFor(m => m.GeselecteerdeStraf, new SelectList(Model.Straffen), new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <th>
                @Html.LabelFor(m => m.Date, new { @class = "control-label" })
            </th>
            <td>
                @Html.TextBoxFor(m => m.Date, new { @class = "datepickersanctie", @readonly = true, @Value = Model.Date.ToString("dd/MM/yyyy") })

                @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <th>
                @Html.LabelFor(m => m.AantalDagen, new { @class = "control-label" })
            </th>
            <td>
                @Html.TextBoxFor(m => m.AantalDagen, new { @class = "form-control", @Value = 1, @type = "number", @min = 1 })
                @Html.ValidationMessageFor(m => m.AantalDagen, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <th>
                @Html.LabelFor(m => m.Rede)
            </th>
            <td>
                @Html.TextAreaFor(m => m.Rede)
                @Html.ValidationMessageFor(m => m.Rede, "", new { @class = "text-danger" })
            </td>
        </tr>
    </table>

    <table class="buttontable">
        <tr>
            <td>
                <input type="image" src="@Url.Content("~/Content/Images/Aanduidingen/accept.png")" />
            </td>
            <td>
                <span class="imagebutton">
                    <a href="@Url.Action("OpvoederIndex", "Gebruiker")">
                        <img src="@Url.Content("~/Content/Images/Aanduidingen/terug.png")" alt="Terug" title="Terug" />
                    </a>
                </span>
            </td>
        </tr>
    </table>
}
