@model KinderhuisStageOpdracht.Models.Viewmodels.OpvangtehuisViewModel.MenuListViewModel
@{
    ViewBag.Title = "MenuIndex";
}

<h2>Index</h2>
@Html.ActionLink("Maak de menu aan", "CreateMenu")
<table class="table">
    <tr>
        <th>Week</th>
        <th>Begin van de week</th>
        <th>Einde van de week</th>
        <th>Acties</th>
    </tr>

    @foreach (var m in Model.Menus)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => m.Week)</td>
            <td>@Html.DisplayFor(modelItem => m.BeginWeek)</td>
            <td>@Html.DisplayFor(modelItem => m.EindeWeek)</td>
            <td>
                @Html.ActionLink("Aanpassen", "EditMenu", new {id = m.Id})
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Terug naar index", "OpvoederIndex", "Gebruiker")

