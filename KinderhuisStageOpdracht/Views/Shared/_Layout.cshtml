    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>

    <script type="text/javascript">
        $(function () {
            $(".datepicker").datepicker({
                dayNames: ["Maandag", "Dinsdag", "Woensdag", "Donderdag", "Vrijdag", "Zaterdag", "Zondag"],
                dayNamesMin: ["Ma", "Di", "Wo", "Do", "Vr", "Za", "Zo"],
